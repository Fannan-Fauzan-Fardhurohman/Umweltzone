<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- Base styles -->

    <style name="HorizontalLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:background">@color/horizontal_line_fill_color</item>
        <item name="android:layout_marginTop">@dimen/large_spacer</item>
        <item name="android:layout_marginBottom">@dimen/large_spacer</item>
    </style>

    <style name="TextView.Base.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextView.Base.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextView.Base.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextView.Title" parent="TextView.Base.Small">
        <item name="android:textSize">@dimen/fragment_title</item>
        <item name="android:layout_marginBottom">@dimen/huge_spacer</item>
    </style>

    <style name="Button.Base" parent="android:Widget.Holo.Light.Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Web" parent="Button.Base">
        <item name="android:autoLink">web</item>
        <item name="android:textColorLink">@color/button_web_text_color_link</item>
    </style>

    <!-- AboutActivity -->

    <style name="About.Logo" parent="TextView.Base.Small">
        <item name="android:src">@drawable/umweltzone_logo_bordered_256</item>
        <item name="android:layout_marginBottom">@dimen/large_spacer</item>
    </style>

    <style name="About.ContentTitle" parent="TextView.Base.Medium">
        <item name="android:gravity">center</item>
    </style>

    <style name="About.TextContent" parent="TextView.Base.Small">
        <item name="android:textColor">@color/about_text_content_foreground</item>
    </style>

    <style name="About.ButtonWebTitle" parent="TextView.Base.Small">
        <item name="android:textColor">@color/about_button_web_title_foreground</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/big_spacer</item>
    </style>

    <style name="About.ButtonWeb" parent="Button.Web">
        <item name="android:layout_marginTop">@dimen/medium_spacer</item>
    </style>

    <!-- CitiesActivity -->

    <style name="ZoneBadge" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">@dimen/city_zone_badge_width</item>
        <item name="android:layout_height">@dimen/city_zone_badge_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/zone_layer</item>
        <item name="android:text">0</item>
    </style>

    <style name="ZoneName" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/big_spacer</item>
    </style>

    <!-- CityInfoActivity -->

    <style name="ZoneInfoEmpty.Title" parent="TextView.Title" />

    <style name="ZoneInfoEmpty.StatusDesc" parent="TextView.Base.Small">
        <item name="android:layout_marginBottom">@dimen/large_spacer</item>
        <item name="android:padding">@dimen/big_spacer</item>
        <item name="android:background">@color/zone_info_empty_status_desc_background</item>
    </style>

    <style name="ZoneInfoEmpty.SelectZone" parent="Button.Base" />

    <style name="ZoneInfo.Title" parent="TextView.Title" />

    <style name="ZoneInfo.ZoneStatus" parent="TextView.Base.Medium">
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:padding">@dimen/big_spacer</item>
        <item name="android:layout_marginBottom">@dimen/large_spacer</item>
    </style>

    <style name="ZoneInfo.Content" parent="TextView.Base.Small">
        <item name="android:layout_marginBottom">@dimen/big_spacer</item>
    </style>

    <style name="ZoneInfo.ShowOnMap" parent="Button.Base">
        <item name="android:layout_marginTop">@dimen/large_spacer</item>
    </style>

    <style name="ZoneInfo.FurtherInformation" parent="Button.Base" />

    <!-- FaqActivity -->

    <style name="Faq.ExpandableListView" parent="android:style/Widget.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/medium_spacer</item>
        <item name="android:divider">@color/list_divider</item>
        <item name="android:dividerHeight">@dimen/tiny_spacer</item>
    </style>

    <style name="Faq.Content.SourceUrlTitle" parent="TextView.Base.Small">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/faq_answer_source_title</item>
    </style>

    <style name="Faq.Content.SourceUrl" parent="Button.Web" />

    <style name="Faq.Content.Question" parent="TextView.Base.Medium">
        <item name="android:textColor">@color/faq_question_foreground</item>
        <item name="android:paddingLeft">@dimen/huge_spacer</item>
    </style>

    <style name="Faq.Content.Answer" parent="TextView.Base.Medium">
        <item name="android:layout_marginBottom">@dimen/medium_spacer</item>
        <item name="android:textColor">@color/faq_answer_foreground</item>
    </style>


</resources>
