<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details.DetailsFragment">

    <LinearLayout
        android:id="@+id/zoneDetailsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/details_margin_horizontal"
        android:layout_marginLeft="@dimen/details_margin_horizontal"
        android:layout_marginTop="@dimen/details_margin_vertical"
        android:layout_marginEnd="@dimen/details_margin_horizontal"
        android:layout_marginRight="@dimen/details_margin_horizontal"
        android:layout_marginBottom="@dimen/details_margin_vertical"
        android:orientation="vertical"
        android:padding="@dimen/big_spacer"
        tools:background="@android:color/holo_blue_light"
        tools:minHeight="444dp">

        <!-- Child views are added at runtime. -->

    </LinearLayout>

</ScrollView>
