<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/huge_spacer">

        <ImageView
            android:contentDescription="@string/about_application_logo_description"
            style="@style/About.Logo" />

        <TextView
            style="@style/About.TextContent"
            android:text="@string/about_subtitle" />

        <include
            layout="@layout/horizontal_line" />

        <include
            layout="@layout/about_copyright" />

        <include
            layout="@layout/horizontal_line" />

        <include
            layout="@layout/about_description" />

        <include
            layout="@layout/horizontal_line" />

        <include
            layout="@layout/about_data" />

        <include
            layout="@layout/horizontal_line" />

        <include
            layout="@layout/about_graphics" />

        <include
            layout="@layout/horizontal_line" />

        <include
            layout="@layout/about_written_text" />

        <include
            layout="@layout/horizontal_line" />

        <include
            layout="@layout/about_libraries" />

        <include
            layout="@layout/horizontal_line" />

        <include
            layout="@layout/about_contact" />

    </LinearLayout>
</ScrollView>
