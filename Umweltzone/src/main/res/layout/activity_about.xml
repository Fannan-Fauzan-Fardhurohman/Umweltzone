<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".AboutActivity">

    <TextView
        android:id="@+id/textViewAboutTitle"
        style="@style/AboutText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/about_title"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewAboutSubtitle"
        style="@style/AboutText"
        android:layout_below="@id/textViewAboutTitle"
        android:layout_marginTop="3dp"
        android:text="@string/about_subtitle"/>

    <TextView
        android:id="@+id/textViewAboutDesc"
        style="@style/AboutText"
        android:layout_below="@id/textViewAboutSubtitle"
        android:layout_marginTop="40dp"
        android:text="@string/about_desc"
        android:textSize="16sp"/>

</RelativeLayout>
