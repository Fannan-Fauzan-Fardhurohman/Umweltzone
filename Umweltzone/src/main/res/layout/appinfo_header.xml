<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:gravity="center"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        style="@style/AppInfo.Logo"
        android:contentDescription="@string/appinfo_application_logo_description" />

    <TextView
        style="@style/AppInfo.TextContent"
        android:text="@string/appinfo_subtitle" />

    <TextView
        android:id="@+id/buildVersion"
        style="@style/AppInfo.TextContent"
        tools:text="@sample/build_info.json/versionName" />

</merge>
